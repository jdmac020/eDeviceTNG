@model EDeviceClaims.WebUi.Models.ClaimViewModel

<h3 class="centerElement">Details</h3>

<div>
    <table class="table" id="claimListTable">
        <tr>
            <th>@Html.Label("Device")</th>
            <td>@Model.DeviceName</td>
        </tr>
        <tr>
            <th>@Html.Label("Policy")</th>
            <td>@Model.PolicyNumber</td>
        </tr>
        <tr>
            <th>@Html.Label("Open Since")</th>
            <td>@Model.Opened</td>
        </tr>
        <tr>
            <th>@Html.Label("Status")</th>
            <td>@Model.Status</td>
        </tr>
    </table>
</div>